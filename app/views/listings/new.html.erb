  <form class="form-basic" method="post" action="/listings">

    <div class="form-title-row">
        <h1>List Your Property</h1>
    </div>

    <div class="form-row">
        <label>
            <span>Unit Number</span>
            <input type="text" name="unit_number" placeholder="Unit Number">
        </label>
    </div>
    <div class="form-row">
        <label>
            <span>Street name</span>
            <input type="text" name="street_name"placeholder="Street Name">
        </label>
    </div>
    <div class="form-row">
        <label>
            <span>Size</span>
            <input type="text" name="size" placeholder="sq ft">
        </label>
    </div>
    <div class="form-row">
        <label>
            <span>Price</span>
            <input type="text" name="price" placeholder="sq ft">
        </label>
    </div>
    <div class="form-row">
        <label>
            <span>Year Built</span>
            <input type="text" name="year_built" placeholder="year">
        </label>
    </div>

    <div class="form-row">
        <label>
          <span>Number of Rooms</span>
          <select name="bedrooms">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
              <option>6</option>
              <option>7</option>
              <option>8</option>
              <option>9</option>
              <option>10</option>
          </select>
        </label>
        <label>
            <span>Number of Bathrooms</span>
            <select name="bathrooms">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
              <option>6</option>
              <option>7</option>
              <option>8</option>
              <option>9</option>
              <option>10</option>
            </select>
        </label>
    </div>

    <div class="form-row">
      <span>Common Area Amenities</span><br>
        <label>
            <span>Gym</span>
            <input type="checkbox" name="gym" unchecked>
        </label>
        <label>
            <span>Amenities Room</span>
            <input type="checkbox" name="amenities_room" unchecked>
        </label><br>            
        <label>
            <span>Elevator</span>
            <input type="checkbox" name="elavator" unchecked>
        </label>          
        <label>
            <span>Bike Room</span>
            <input type="checkbox" name="bike_room" unchecked>
        </label><br>
        <label>
            <span>Garden</span>
            <input type="checkbox" name="garden" unchecked>
        </label>
        <label>
            <span>Hot Tube</span>
            <input type="checkbox" name="hot_tube" unchecked>
        </label><br>
        <label>
            <span>Pool</span>
            <input type="checkbox" name="pool" unchecked>
        </label><br><br>

      <span>In Home Features</span><br>
        <label>
            <span>In Suite Laundry</span>
            <input type="checkbox" name="insuite_laundry" unchecked>
        </label>
        <label>
            <span>Dishwasher</span>
            <input type="checkbox" name="dishwasher" unchecked>
        </label><br>
        <label>
            <span>Stove</span>
            <input type="checkbox" name="stove" unchecked>
        </label>
        <label>
            <span>Fridge</span>
            <input type="checkbox" name="fridge" unchecked>
        </label><br>
        <label>
            <span>Hot Tube</span>
            <input type="checkbox" name="hot_tube" unchecked>
        </label>
        <label>
            <span>Pool</span>
            <input type="checkbox" name="pool" unchecked>
        </label><br><br>

        <span>Other Features</span><br>
        <label>
            <span>Pet Friendly</span>
            <input type="checkbox" name="pet_friendly" unchecked>
        </label>
        <label>
            <span>Wheel Chair Accessible</span>
            <input type="checkbox" name="wheelchair_accessible" unchecked>
        </label><br>
    </div>

    <div class="form-row">
        <label>
            <span>Property Details</span>
            <textarea name="property_summary"></textarea>
        </label>
    </div>

    <div class="form-row">
        <label>
            <span>Special Features</span>
            <textarea name="features_description"></textarea>
        </label>
    </div>

      <div class="form-row">
          <button type="submit">Submit Form</button>
      </div>

  </form>



