<%= render 'layouts/bookmarkRightBar' %>


<br>
   <div class="row listing">
    <% @listings.each_with_index do |listing, index| %>
    <!-- Listing box Begins-->
    <div class=" col-md-4 col-sm-6 cols-xs-12 ">
      <div class="featureList text-center">

        <div id="carousel-listing-1" class="carousel slide" data-ride="carousel">

          <div class="carousel-inner">
            <div class="item active">
               <%= image_tag "listing_images/property1_1.jpg" %>
            </div>
            <div class="item">
               <%= image_tag "listing_images/property1_2.jpg" %>
            </div>
            <div class="item">
               <%= image_tag "listing_images/property1_3.jpg" %>
            </div>
          </div>
        
        
          
          <a class="left carousel-control c-control" href="#carousel-listing-1" role="button" data-slide="prev">
            <span class="icon-prev" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control c-control" href="#carousel-listing-1" role="button" data-slide="next">
            <span class="icon-next" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>


        <div class="listing-box-info">
          <h4 class="regular property-price">$<%= listing.price %></h4>
          <div class="feature-short-info">
            <p class="muted regular address"><em><%= listing.address %></em></p>
            <div class="muted regular area">
              <%= listing.size %> sqr/ft
            </div>
            <div class="bedbath"><%= listing.bedrooms %>
              <p class="muted regular bedroom"><em><i class="fa fa-bed" aria-hidden="true"></i></em>
                <container class="bathroom"><em><%= listing.bathrooms %>bath</em></container>

                <%= link_to 'Bookmark',listing_add_bookmark_path(:listing_id=>listing.id), 'data-method' => 'post', 'data-remote' => 'true', 'data-type' => 'json', 'class' => 'bookmark' %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
               
    <!-- Listing box Ends-->
<% end %>

</div>

